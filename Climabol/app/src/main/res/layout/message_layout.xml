<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff608fa0"
    android:weightSum="7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/txt_title_view"
        android:layout_gravity="center_horizontal"
        android:textSize="27sp"
        android:layout_marginLeft="50dp"
        android:textColor="#ff8e2e52"
        android:layout_weight="1"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/txt_climaActual_view"
        android:layout_gravity="center_horizontal"
        android:textSize="27sp"
        android:layout_weight="1"
        android:layout_marginLeft="17dp"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/txt_Max_view"
        android:layout_gravity="center_horizontal"
        android:textSize="27sp"
        android:layout_weight="1"
        android:layout_marginLeft="17dp"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/txt_Min_view"
        android:layout_gravity="center_horizontal"
        android:textSize="27sp"
        android:textColor="#ff8e2e52"
        android:layout_weight="1"
        android:layout_marginLeft="17dp"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/txt_Humedad_view"
        android:layout_gravity="center_horizontal"
        android:textSize="27sp"
        android:textColor="#ff8e2e52"
        android:layout_weight="1"
        android:layout_marginLeft="17dp"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/txt_Pression_view"
        android:layout_gravity="center_horizontal"
        android:textSize="27sp"
        android:textColor="#ff8e2e52"
        android:layout_weight="1"
        android:layout_marginLeft="17dp"
        android:textAlignment="textStart" />
</LinearLayout>